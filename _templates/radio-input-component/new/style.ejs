---
to: src/app/components/common/<%= h.inflection.camelize(name.replace(/\s/g, '_')) %>/style.css
---
.<%= h.inflection.dasherize(name.toLowerCase()) %> {

  /* Remove default Radio Buttons */
  [type="radio"] {
    position: absolute;
    left: -9999px;
    visibility: hidden;
    transition: 200ms ease;
    & + label {
      position: relative;
      padding-left: 2em;
      cursor: pointer;
      display: inline-block;
      height: 1.7em;
      line-height: 1.7em;
      transition: 200ms ease;
      user-select: none;
      &::before,
      &::after {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        margin: 3px;
        width: 1.2em;
        height: 1.2em;
        z-index: 0;
        transition: 200ms ease;
      }
    }
  
    /* Unchecked styles */
    &:not(:checked) {
      & + label::before {
        transition: 200ms ease;
        border-radius: 50%;
        border: 1px solid currentColor;
      }
      & + label::after {
        transition: 200ms ease;
        border-radius: 50%;
        border: 1px solid currentColor;
        z-index: -1;
        transform: scale(0);
      }
    }
  
    /* Checked styles */
    &:checked {
      & + label::before {
        border-radius: 50%;
        border: 1px solid transparent;
      }
      & + label::after {
        border-radius: 50%;
        border: 1px solid var(--accent-color);
        background-color: var(--accent-color);
        z-index: 0;
        transform: scale(1.02);
      }
    }
  
    /* Disabled style */
    &:disabled {
      & + label {
        color: var(--border-color);
        cursor: default;
        &::before {
          background-color: transparent;
          border-color: var(--border-color);
          cursor: default;
        }
      }
      
      &:not(:checked) {
        & + label {
          &::before {
            border-color: var(--border-color);
          }
        }
      }
      &:checked {
        & + label {
          &::after {
            background-color: var(--border-color);
            border-color: currentColor;
          }
        }
      }
    }
  }
}
