export const scope = (state, nestedState) => ({
  ...state,
  <%= h.inflection.camelize(name.replace(/\s/g, '_'), true) %>: nestedState
})

export const SetValue = (state, key, ev) => scope(state, {
  ...state.<%= h.inflection.camelize(name.replace(/\s/g, '_'), true) %>,
  [key]: ev.target.value
})

export const SubmitForm = (state, ev) => {
  ev.preventDefault();
  alert('Submitted!\nForm state: \n\n' + JSON.stringify(state.<%= h.inflection.camelize(name.replace(/\s/g, '_'), true) %>, null, 2));
  return scope(state, {
    ...state.<%= h.inflection.camelize(name.replace(/\s/g, '_'), true) %>,
    submitted: true
  })
}
