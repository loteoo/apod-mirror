---
to: src/app/components/<%= h.inflection.camelize(name.replace(/\s/g, '_')) %>/style.css
---
.<%= h.inflection.dasherize(name.toLowerCase()) %> {
  margin: 1rem 0;
  padding: 1rem;
  border: 1px solid var(--border-color);
  border-radius: 0.2rem;
  > .list {
    list-style: none;
    padding: 0;
    > .item {
      display: flex;
      > button {
        margin-left: 1rem;
      }
    }
  }
}
