---
to: src/app/components/common/<%= h.inflection.camelize(name.replace(/\s/g, '_')) %>/style.css
---
.<%= h.inflection.dasherize(name.toLowerCase()) %> {
  display: flex;
  flex-direction: column-reverse;
  margin: 1rem 0;
  position: relative;
  &:first-child {
    margin-top: 0;
  }
  label {
    &::after {
      margin-left: 0.5em;
    }
  }
  input {
    margin: 0;
    &:focus {
      background: #f1f1fc;
      border-color: var(--accent-color);
      & + label {
        color: var(--accent-color);
        &:after {
          content: "↻";
        }
      }
    }
    &:not(:focus):not(:placeholder-shown):invalid {
      background: #fcf1f4;
      border-color: var(--danger-color);
      & + label {
        color: var(--danger-color);
        &:after {
          content: "✗";
        }
      }
    }
    &:not(:focus):not(:placeholder-shown):valid {
      background: #f1fcf6;
      border-color: var(--success-color);
      & + label {
        color: var(--success-color);
        &:after {
          content: "✓";
        }
      }
    }
  }
  &>.hint {
    margin: 0.25rem 0;
    padding-left: 10pt;
    font-size: 0.8em;
    opacity: 0.5;
  }
}
